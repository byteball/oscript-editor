{
	"name": "oscript-editor",
	"version": "0.1.0",
	"author": "Obyte",
	"license": "MIT",
	"description": "Online editor for Oscript - a language of autonomous agents",
	"private": true,
	"scripts": {
		"serve": "node node_modules/cross-env/dist/bin/cross-env.js NODE_CONFIG_ENV=development vue-cli-service serve --mode development",
		"build:testnet": "node node_modules/cross-env/dist/bin/cross-env.js NODE_CONFIG_ENV=testnet vue-cli-service build --mode production --dest dist_testnet",
		"build:prod": "node node_modules/cross-env/dist/bin/cross-env.js NODE_CONFIG_ENV=production vue-cli-service build --mode production --dest dist_prod",
		"lint": "vue-cli-service lint --ext .js,.vue,.htm",
		"compileGrammar:ojson": "./node_modules/.bin/nearleyc ./src/languages/lib/grammars/ojson.ne -o ./src/languages/lib/grammars/ojson.js",
		"compileGrammar:oscript": "./node_modules/.bin/nearleyc ./src/languages/lib/grammars/oscript.ne -o ./src/languages/lib/grammars/oscript.js"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"config": "^3.1.0",
		"core-js": "^2.6.5",
		"cross-env": "^5.2.0",
		"decimal.js": "^10.2.0",
		"lodash": "^4.17.11",
		"monaco-editor-webpack-plugin": "^1.7.0",
		"moo": "^0.5.0",
		"nearley": "^2.16.0",
		"uniqid": "^5.0.3",
		"vue": "^2.6.10",
		"vue-monaco": "^0.3.2",
		"vue-router": "^3.0.3",
		"vuex": "^3.0.1",
		"vuex-persistedstate": "^2.5.4"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.8.0",
		"@vue/cli-plugin-eslint": "^3.8.0",
		"@vue/cli-service": "^3.8.0",
		"@vue/eslint-config-standard": "^4.0.0",
		"aws-sdk": "^2.475.0",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"lint-staged": "^8.1.5",
		"node-sass": "^4.9.0",
		"sass-loader": "^7.1.0",
		"stylelint": "^10.1.0",
		"stylelint-config-recommended-scss": "^3.3.0",
		"stylelint-scss": "^3.8.0",
		"stylelint-webpack-plugin": "^0.10.5",
		"vue-template-compiler": "^2.6.10"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,vue,htm}": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
